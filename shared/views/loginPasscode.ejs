<!DOCTYPE html>
<html>
  <%- include('./partials/header.ejs') %>

  <body>
    <table
      class="body"
      role="presentation"
      border="0"
      cellpadding="0"
      cellspacing="0"
    >
      <tbody>
        <tr>
          <td></td>
          <td class="container">
            <div class="content">
              <!-- START CENTERED WHITE CONTAINER -->
              <table class="main" role="presentation">
                <!-- START MAIN AREA -->
                <tbody>
                  <tr>
                    <td class="wrapper">
                      <table
                        role="presentation"
                        border="0"
                        cellpadding="0"
                        cellspacing="0"
                      >
                        <tbody>
                          <tr>
                            <td>
                              <!-- CONTENT -->
                              <div>
                                <p>Hi <%= firstName %>,</p>
                                <p>
                                  We received a request to log in to your
                                  account on Hunt Finance. Use the following passcode
                                  to complete your login.
                                </p>

                                <table
                                  class="btn btn-primary"
                                  role="presentation"
                                  border="0"
                                  cellpadding="0"
                                  cellspacing="0"
                                >
                                  <tbody>
                                    <tr>
                                      <td align="left">
                                        <table
                                          role="presentation"
                                          border="0"
                                          cellpadding="0"
                                          cellspacing="0"
                                        >
                                          <tbody>
                                            <tr>
                                              <td>
                                                Passcode: <center><h1><%= passcode %></h1></center>
                                              </p>
                                              </td>
                                            </tr>
                                          </tbody>
                                        </table>
                                      </td>
                                    </tr>
                                  </tbody>
                                </table>
                                <p>
                                  This passcode will expire in 10 minutes for
                                  security reasons. If you did not request this
                                  passcode, please ignore this email. Your
                                  account is still secure.
                                </p>
                              </div>
                            </td>
                          </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                </tbody>
              </table>
              <!-- END MAIN AREA -->
            </div>
          </td>
          <!-- <td> -->
        </tr>
      </tbody>
    </table>
  </body>

  <%- include('./partials/footer.ejs') %>
</html>
